load("//build_scripts/bazel:java_rules.bzl", "gos_java_library", "gos_java_robot")

gos_java_library(
    name = "RobotMap",
    srcs = ["RobotMap.java"],
    visibility = ["//y2018/2018PowerUp:__subpackages__"],
)

gos_java_library(
    name = "Vision",
    srcs = [
        "Blob.java",
        "Blobs.java",
        "Pipeline.java",
        "PipelineListener.java",
    ],
    visibility = ["//y2018/2018PowerUp:__subpackages__"],
    deps = [
        "@bazelrio//libraries/java/opencv",
        "@bazelrio//libraries/java/wpilib/cameraserver",
    ],
)

gos_java_library(
    name = "GameData",
    srcs = ["GameData.java"],
    visibility = ["//y2018/2018PowerUp:__subpackages__"],
    deps = [
        ":RobotMap",
        "@bazelrio//libraries/java/wpilib/wpilibj",
    ],
)

gos_java_robot(
    name = "power_up",
    srcs = glob(["*.java"]),
    main_class = "com.gos.power_up.Main",
    visibility = ["//y2018/2018PowerUp:__subpackages__"],
    deps = [
        "//y2018/2018PowerUp/src/main/java/com/gos/power_up/commands",
        "//y2018/2018PowerUp/src/main/java/com/gos/power_up/commands/autonomous",
        "//y2018/2018PowerUp/src/main/java/com/gos/power_up/subsystems",
        "@bazelrio//libraries/java/opencv",
        "@bazelrio//libraries/java/wpilib/cameraserver",
        "@bazelrio//libraries/java/wpilib/new_commands",
        "@bazelrio//libraries/java/wpilib/wpilibj",
    ],
)
